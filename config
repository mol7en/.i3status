# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
}

#order += "ipv6"
#order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "ethernet draco"
order += "battery all"
order += "cpu_temperature 0"
#order += "load"
order += "volume master"
order += "tztime local"
order += "tztime utc"


ipv6 {
	format_up 	= " ipv6: %ip "
	format_down 	= " ipv6 "
}


wireless _first_ {
        format_up 	= " wlan0: %ip %essid%quality "
        format_down 	= " wlan0 "
}

ethernet draco {
        # if you use %speed, i3status requires root privileges
        format_up 	= " wg0 "
        format_down 	= " wg0 "
}


ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up 	= " eth0: %ip (%speed) "
        format_down 	= " eth0 "
}

battery all {
        format 				= " %status %percentage %remaining "
	status_chr			= "chg:"
	status_bat			= "bat:"
	status_full			= "full:"
	integer_battery_capacity 	= true
	last_full_capacity 		= true
	hide_seconds 			= true
	low_threshold 			= 30
	threshold_type			= time
}

cpu_temperature 0 {
	format		= " temp: %degrees "
	max_threshold 	= "90"
}

volume master {
        format 		= " vol: %volume "
	format_muted 	= " mute: %volume "
}

tztime local {
        format 		= " local: %m-%d %H:%M "
}

tztime utc {
        format 		= " utc: %H:%M "
	timezone 	= "UTC"
}

load {
        format 		= " load: %1min "
}

disk "/" {
        format 		= " %avail "
}
